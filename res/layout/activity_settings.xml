<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".SettingsActivity" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_layout">

			<TextView
                android:id="@+id/bgMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="@string/stat_music"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />
			 
            <ToggleButton
                android:id="@+id/toggleButtonMusic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:checked="true"
                android:textOff="Off"
                android:textOn="On" />

        </RelativeLayout>
        
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
			android:orientation="horizontal"
            android:background="@drawable/rounded_layout">
            
			 <TextView
                android:id="@+id/Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="2dp"
                android:text="@string/select_lang"
                android:textColor="#FFFFFFFF"
                android:textSize="12sp" />
			 
			<RadioGroup
			    android:id="@+id/groupLang"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:checkedButton="@+id/langen"
			    android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentRight="true"
			    android:orientation="vertical">
			    
			    <RadioButton 
			      android:id="@+id/langfr"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="@string/francais"/>
			    
			    <RadioButton 
			      android:id="@+id/langen"
			      android:layout_width="wrap_content"
			      android:layout_height="wrap_content"
			      android:text="@string/english"/>
		    
  			</RadioGroup>

            
        </RelativeLayout>

</LinearLayout>
